<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ImageView for sport image (changed ID) -->
        <ImageView
            android:id="@+id/sportsImageDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"/>

        <!-- Title TextView for sport name -->
        <TextView
            android:id="@+id/titleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sport Title"
            android:layout_below="@id/sportsImageDetail"
            android:padding="16dp"
            style="@style/TextAppearance.AppCompat.Headline"/>

        <!-- Subtitle TextView for generic info -->
        <TextView
            android:id="@+id/subTitleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detailed description goes here..."
            android:layout_below="@id/titleDetail"
            android:padding="16dp"
            style="@style/TextAppearance.AppCompat.Subhead"/>

    </RelativeLayout>

</ScrollView>
