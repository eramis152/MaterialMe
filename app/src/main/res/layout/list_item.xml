<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <!-- Root RelativeLayout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ImageView for sport image -->
        <ImageView
            android:id="@+id/sportsImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true" />

        <!-- Title TextView, aligned to the bottom of the ImageView -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_placeholder"
            android:padding="8dp"
            android:layout_alignBottom="@id/sportsImage"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            style="@style/TextAppearance.AppCompat.Headline"/>

        <!-- NewsTitle TextView, placed below the ImageView -->
        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/news_placeholder"
            android:padding="8dp"
            android:layout_below="@id/sportsImage"
            android:textColor="?android:textColorSecondary"
            style="@style/TextAppearance.AppCompat.Subhead" />

        <!-- Subtitle TextView, placed below NewsTitle -->
        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sports_info_placeholder"
            android:padding="8dp"
            android:layout_below="@id/newsTitle"
            style="@style/TextAppearance.AppCompat.Subhead" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
